<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"

        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.igitsoft.zupporpim"
        version     = "0.0.1"
        versionCode = "0.0.1" >

        <!-- versionCode is optional and Android only -->

        <preference name="phonegap-version" value="cli-6.5.0" />
		<preference name="orientation" value="portrait" />
		<preference name="fullscreen" value="true" />
		<preference name="android-build-tool" value="gradle" />

        <name>Zuppor PIM</name>

        <description>
            Administra tus finanzas, ahorra y crece tus ingresos. 
        </description>

        <author href="http://igitweb.com/apps" email="info@igitweb.com">
            iGitApps
        </author>
		<icon src="img/isoWeb.png" />
		
		<platform name="ios" />
		<platform name="android" />
		
		<gap:plugin name="com-admob-plugin" source="npm"/>
		<plugin name="cordova-plugin-whitelist" source="npm" />
		
		<allow-navigation href="http://*/*" />
		<allow-navigation href="https://*/*" />
		<allow-navigation href="data:*" />
		
		<access origin="*" />
		
    </widget>